{
  "layer": "bottom",
  "height": 20,
  "spacing": 10,
  "position": "top",
  "modules-left": [
    "custom/workspace",
    "custom/app_id",
    "custom/app_title"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "mpd",
    // "custom/brightness",
    "memory",
    "pulseaudio",
    "tray"
  ],
  "tray": {
    "icon-size": 15,
    "spacing": 20
  },
  "clock": {
    "timezone": "Asia/Shanghai",
    "format-alt": "ÔÅ≥ {:%d/%m/%Y}",
    "format": "ÔÄó  {:%H:%M}"
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-muted": "Ôë¶",
    "format-icons": {
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ® "
      ]
    }
  },
  "memory": {
    "format": "ÓøÖ   {used}G"
  },
  "mpd": {
    "format": "{stateIcon}  {title}",
    "state-icons": {
      "playing": "ÔÅå",
      "paused": "ÔÅã"
    },
    "on-click": "rmpc togglepause"
  },
  "custom/workspace": {
    "exec": "python ~/.config/waybar/scripts/workspace.py",
    "format": "{text}",
    "signal": 8
  },
  "custom/app_id": {
    "exec": "python ~/.config/waybar/scripts/appindicator.py app_id",
    "format": "{text}",
    "signal": 9
  },
  "custom/app_title": {
    "exec": "python ~/.config/waybar/scripts/appindicator.py title",
    "format": "{text}",
    "signal": 10
  },
  "custom/brightness": {
    "exec": "python ~/.config/waybar/scripts/brightness.sh",
    "format": "üîÜ {text}%",
    "signal": 11
  }
}
